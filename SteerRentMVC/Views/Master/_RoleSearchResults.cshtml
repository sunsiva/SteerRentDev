@model List<SteerRent.Model.RoleModel>

<div class="contain_row">
                                        	<h5 class="contain_title">User Roles</h5>
                                            <div class="contain_sub_row">
                                            	<p class="label_part">List of Roles</p>
                                                <div class="label_textarea_part">
                                                        <table class="gridtable">
                                                            <tr>
                                                                <th>
                                                                    Sl. No.
                                                                </th>
                                                                <th>
                                                                    Role Name
                                                                </th>
                                                                <th>
                                                                    Activate
                                                                </th>
                                                                <th>
                                                                    Created By / Created Date
                                                                </th>
                                                                <th>
                                                                    Delete
                                                                </th>
                                                            </tr>
                                                            @if (Model != null)
                                                                {
                                                                    var cnt = 0;
                                                                    foreach (var item in Model)
                                                                    {
                                                                        cnt = cnt + 1;
                                                            <tr>
                                                                <td>
                                                                    @Html.Raw(cnt)
                                                                </td>
                                                                <td>
                                                                    @item.RoleName
                                                                </td>
                                                                <td>
                                                                    @if (item.RoleName.Contains("Manager") || item.RoleName.Contains("Admin") || item.RoleName.Contains("Supervisor"))
                                                                    {
                                                                    <input type="checkbox" disabled="disabled" name="chkStateDisable" checked="@item.IsActive" class="checkbox-mrg" />
                                                                    }
                                                                    else
                                                                    {<input type="checkbox" id="@item.RoleId"  name="chkState" checked="@item.IsActive" class="checkbox-mrg" />}
                                                                </td>
                                                                <td>
                                                                    @item.UserID / @item.CreatedOn
                                                                </td>
                                                                <td> @if(item.IsActive == false){ <div id='dvDelete-@item.RoleId' class="del_btn">X</div>}
                                                                    else{<div id='dvNoDelete-@item.RoleId' class="error_msg"></div>}
                                                                </td>
                                                            </tr>
                                                            }
                                                            }
                                                            else
                                                                    {
                                                                    <tr><td colspan="5"><span  class="error_msg">No record(s) found.</span></td></tr>
                                                                }
                                                              
                                                    </table>
                                                    
                                                    <br />
                                                         @if (Model != null)
    {
        if (Model != null)
        {
    <h5 style="text-align:right"> <span id="spnTotCnt">@Model.Count()</span> records found.
    <span id="spnActiveCnt"> @Model.Where(m => m.IsActive == true).Count()</span> - Active,
    <span id="spnInActiveCnt"> @Model.Where(m => m.IsActive == false).Count()</span> - Inactive.</h5>
        }
    }
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                        </div>