@model SteerRent.Model.LocationModel

<!--- START A004 - Locations -->
<div class="A004 st_view">
                            <div class="st_view_inner">
                            	<div class="tab_contant_inner">
                           			<div class="contain_row">
                                    	<p id="errImg" class="error_msg_bg" style="display:none">&nbsp;</p>
                                        <p id="valMsg" class="error_msg_sm" style="display:none">Please enter all required fields.</p>
                                        <p id="errMsg" class="error_msg_sm" style="display:none">Error(s) while processing your request. Please try again. Contact your administrator if the issue persists.</p>
                                    </div>
                                    <div id="srchList">
                                         @Html.Partial("_LocationSearchResults",Model)                                
                                        </div>
                                        <div id="locAddUpdate">
                                        </div>
                                        <span id="spnResultsMsg"></span>
                                </div>
                            </div>    
                        </div>
<!-- END A004 -->
    
     <script lang="ja" type="text/javascript">
     $(document).ready(function () {
         $('#LocationName').focus(function () { $('#errImg').hide(); $('#valMsg').hide(); $('#errMsg').hide(); });
         $('#btnSubmitA4').click(function () {
             if ($('#LocationName').val() == '' || $('#LocationCode').val() == '') {
                 $('#errImg').show(); $('#valMsg').show();
                 return;
             }
             RefreshGrid();
         });

         function RefreshGrid() {
             var href = '@Url.Action("LocationInsert")';
                $.ajax({
                    url: href,
                    data:  { LocName: $('#LocationName').val(), LocCode: $('#LocationCode').val() },
                    type: "POST",
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        $('#srchList').html(data);
                        $('#spnResultsMsg').html('Successfully inserted.');
                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        $('#errMsg').show();
                        //alert("Error:Action is aborted.Please try again later.");
                    }
                });
            }
        });
    </script>
