@model List<SteerRent.Model.EmployeeModel>

<div id="EmployeeSearch">
    <div class="contain_row">
        @*<h5 class="contain_title">Employee Master</h5>*@
        <h5 class="label_part">List of Employees</h5>
        <div class="contain_sub_row">
            @*<p class="label_part">List of Employees</p>*@
            <div class="label_textarea_part">
                <table class="gridtable">
                    <tr>
                        <th width="15%">Employee Id
                        </th>
                        <th width="40%">Employee Name
                        </th>
                        <th width="35%">Designation
                        </th>
                        <th width="10%">Status
                        </th>
                    </tr>
                    @if (Model != null && Model.Count() > 0)
                    {
                        var cnt = 0;
                        foreach (var item in Model)
                        {
                            cnt = cnt + 1;
                            <tr>
                            <td>
                                <a href='#' onclick="fnEmpAddUpdate(@item.EmployeeId)" title="Click to view '@item.EmployeeCode' details..">@item.EmployeeCode</a>
                            </td>
                            <td>
                                @item.FirstName
                            </td>
                                 <td>
                                @item.DesignationId
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {<div id="dvEmpActivate-@item.EmployeeId" class="label_part">Active</div>}
                                else
                                {
                                    <div id='dvEmpInActivate-@item.EmployeeId' class="error_msg">Inactive</div>
                                                                            }
                            </td>
                                </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4"><span class="error_msg">No record(s) found.</span></td>
                        </tr>
                     }
                </table>
                @if (Model != null)
                {
                    if (Model.Count > 0)
                    {
                    <h5 style="text-align: right"><span id="spnEmpTotCnt">@Model.Count()</span> records found.
                    <span id="spnEmpActiveCnt">@Model.Where(m => m.IsActive == true).Count()</span> - Active,
                    <span id="spnEmpInActiveCnt">@Model.Where(m => m.IsActive == false).Count()</span> - Inactive.</h5>
                    }
                }
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
